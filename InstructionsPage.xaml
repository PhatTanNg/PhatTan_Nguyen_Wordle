<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="PhatTan_Nguyen_Wordle.InstructionsPage">

    <StackLayout>
        <Label Text="Wordle Game Instructions" FontSize="24" HorizontalOptions="CenterAndExpand" Margin="0,20,0,20"/>
        <Label Text="1. Guess the word by entering a 5-letter word in the provided boxes." FontSize="18" HorizontalOptions="Start" Margin="0,0,0,10"/>
        <Label Text="2. Each letter in the correct position will be marked with green, and each correct letter in the wrong position will be marked with yellow." FontSize="18" HorizontalOptions="Start" Margin="0,0,0,10"/>
        <Label Text="3. You have a maximum of 6 guesses to find the word." FontSize="18" HorizontalOptions="Start" Margin="0,0,0,10"/>
        <Label Text="4. Have fun playing Wordle!" FontSize="18" HorizontalOptions="Start" Margin="0,0,0,10"/>



        <Button x:Name="letGoButton" Text="Let's Go" Clicked="LetGoButton_Clicked" />
    </StackLayout>
</ContentPage>
